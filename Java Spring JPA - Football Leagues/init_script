drop table if exists league CASCADE
drop table if exists player CASCADE
drop table if exists team CASCADE
drop sequence hibernate_sequence if exists
create sequence hibernate_sequence start with 1 increment by 1
create table league (
       id integer not null,
        end_date date,
        name varchar(255),
        start_date date,
        primary key (id)
    )
create table player (
       id integer not null,
        age integer not null,
        first_name varchar(255),
        last_name varchar(255),
        shirt_num integer not null,
        value float,
        team_id integer,
        primary key (id)
    )
create table team (
       id integer not null,
        city varchar(255),
        country varchar(255),
        name varchar(255),
        league_id integer,
        primary key (id)
    )
alter table league
       add constraint UK_n8qcbpi2pjf8bbenfm9le3v36 unique (name)
alter table player
       add constraint FKdvd6ljes11r44igawmpm1mc5s
       foreign key (team_id)
       references team
alter table team
       add constraint FK9rk8716asfr76xkn99aa3uvp
       foreign key (league_id)
       references league